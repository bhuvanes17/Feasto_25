<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:theme="@style/CardView.Light">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:layout_collapseMode="parallax">

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/location_2" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="#02060B"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18sp"
                        android:paddingStart="5dp" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/down_arrow" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="242dp"
                        android:gravity="center"
                        android:text="Bhu"
                        android:textColor="#131A42"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:popupTheme="@style/Theme.AppCompat.Light"
                app:layout_collapseMode="pin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                >

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="390dp"
                android:layout_height="55dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="12dp"
                android:elevation="8dp"
                android:hint="Restaurants name or a dish..."
                android:fontFamily="@font/poppins_medium"
                android:textColorHint="#424141"
                android:textSize="14sp"
                android:background="@drawable/editext"
                android:textColor="#A29E9E"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/search_icon2"
                android:drawableEnd="@drawable/mic_icon3"
                android:paddingEnd="10dp"
                />

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imgGifBanner"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="-18dp"
                android:scaleType="fitStart"
                android:src="@drawable/food_del"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:text="Categories"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFoodCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/ll_option_row"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="3dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll_filters"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="3dp"
                        android:orientation="horizontal"
                        android:background="@drawable/layout_top"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/filter_list"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Filter"
                            android:textSize="14sp"
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:textColor="#09101A"
                            android:fontFamily="@font/poppins_medium"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="3dp"
                            android:src="@drawable/down_arrow"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_width="115dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/layout_top"
                        android:elevation="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Under Rs.150"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/blue_font"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_under30min"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/layout_top"
                        android:elevation="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Under 30 min"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/blue_font"
                            android:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_rating"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/layout_top"
                        android:elevation="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Rating 4.0+"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/blue_font"
                            android:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_pureveg"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:background="@drawable/layout_top"
                        android:elevation="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Pure Veg"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:layout_marginStart="14dp"
                            android:textColor="@color/blue_font"
                            android:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Explore More"
                android:textSize="14sp"
                android:textColor="#504F4F"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/robotomono_light" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">
        <LinearLayout
            android:id="@+id/ll_exlore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="3dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_offers"
                android:layout_width="85dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp">
                <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/price_tag"/>
                <TextView
                    android:id="@+id/home_name"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textAlignment="center"
                    android:text="Offers"
                    android:textColor="#0A0D1D"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crd_top10"
                android:layout_width="85dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/home_img2"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/star_icon"/>
                    <TextView
                        android:id="@+id/home_name2"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textAlignment="center"
                        android:text="Top 10"
                        android:textColor="#0A0D1D"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_train"
                android:layout_width="85dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/home_img3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/train_icon"/>
                    <TextView
                        android:id="@+id/home_name3"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textAlignment="center"
                        android:text="Food on train"
                        android:textColor="#0A0D1D"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_collection"
                android:layout_width="85dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/home_img5"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/food_icon"/>
                    <TextView
                        android:id="@+id/home_name5"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textAlignment="center"
                        android:text="Collection"
                        android:textColor="#0A0D1D"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crd_gift"
                android:layout_width="85dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/home_img4"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/gift_card"/>
                    <TextView
                        android:id="@+id/home_name4"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textAlignment="center"
                        android:text="Gift cards"
                        android:textColor="#0A0D1D"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
            </HorizontalScrollView>


            <!-- Filter + Explore -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Explore More"
                    android:textColor="#807D7D"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRestaurants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>