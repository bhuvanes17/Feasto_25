<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location_details.Address_book">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F8">


        <ImageView
            android:id="@+id/img_myaddre_downlogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/down_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Addresses"
            android:textSize="18sp"
            android:textColor="@color/blue_font"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/img_myaddre_downlogo"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_mycurrent_location"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/img_myaddre_downlogo">


            <RelativeLayout
                android:id="@+id/rl_myaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                >


                <ImageView
                    android:id="@+id/img_plus"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/plus"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/tv_add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_plus"
                    android:text="Add Address"
                    android:textSize="15sp"
                    android:textColor="#FD3277"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/tv_add_address"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="215dp"
                    android:src="@drawable/arrow_right"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <View
            android:id="@+id/line_addresspage1"
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:layout_marginTop="38dp"
            android:background="#E0D9D9"
            android:layout_marginStart="12dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_mycurrent_location"
            />


        <TextView
            android:id="@+id/tv_save_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Addresses"
            android:textAllCaps="true"
            android:textColor="#FD3277"
            android:layout_marginTop="28dp"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@id/card_mycurrent_location"
            android:layout_toRightOf="@id/line_addresspage1"/>

        <View
            android:id="@+id/line_addresspage2"
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:layout_marginTop="38dp"
            android:background="#E0D9D9"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/card_mycurrent_location"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_save_addre"
            android:layout_width="230dp"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/tv_save_address">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home_2"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_home"
                    android:text="Home"
                    android:textSize="16sp"
                    android:textColor="@color/blue_font"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/tv_addressbook2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_home"
                    android:text="22/3 kizharaja vidhi, 2nd street,pudukkottai"
                    android:textSize="13sp"
                    android:textColor="#3A3434"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/tv_address"
                    />
                <TextView
                    android:id="@+id/tv_address3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_home"
                    android:text="Phone : 91+"
                    android:textSize="13sp"
                    android:textColor="#3A3434"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/tv_addressbook2"
                    />
                <TextView
                    android:id="@+id/tv_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="91*51*156*"
                    android:textSize="13sp"
                    android:textColor="#544F4F"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/tv_addressbook2"
                    android:layout_toRightOf="@id/tv_address3"
                    />

                <ImageView
                    android:id="@+id/img_option2"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/option"
                    android:layout_below="@id/tv_address3"
                    android:layout_toRightOf="@id/img_home"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_powerby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power By"
            android:textColor="#767575"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:layout_below="@id/card_save_addre"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:src="@drawable/google"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_powerby"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>