<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Login_page">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8E705"
        tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="380dp"
        android:layout_height="440dp"
        android:src="@drawable/login_img"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />
        <ImageView
            android:id="@+id/logoImage2"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/cooking2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="65dp"
            android:layout_marginStart="55dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="India's #1 Food Delivery \nand Dining App"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/rl"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#1C304B"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/divider_line"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#E0D9D9"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:text="Login in or sign up"
        android:textColor="#4E4E4E"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintLeft_toRightOf="@id/divider_line"
      />
    <View
        android:id="@+id/divider_line2"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:background="#E0D9D9"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@id/tv_login"
        />
    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:elevation="3dp"
        android:hint="Enter 10 - digit Mobile Number"
        android:maxLength="10"
        android:textColorHint="#807D7D"
        android:gravity="center"
        android:textColor="#1C304B"
        android:textSize="15sp"
        android:inputType="number"
        android:padding="3dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/editext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login"/>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_continue"
    android:layout_width="390dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@id/et_mobile"
    android:elevation="3dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="45dp"
    android:layout_marginEnd="45dp"
    android:layout_marginTop="30dp"
    android:text="Continue"
    android:textColor="@color/white"
    android:textSize="19sp"
    android:textAllCaps="false"
    android:textAlignment="center"
    android:outlineAmbientShadowColor="#1C304B"
    android:fontFamily="@font/poppins_medium"
    android:background="@drawable/button"/>

    <View
        android:id="@+id/divider_line3"
        android:layout_width="175dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#E0D9D9"
        app:layout_constraintTop_toBottomOf="@+id/btn_continue"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/tv_or"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_marginStart="70dp"
        android:text="or"
        android:textColor="#4E4E4E"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_continue"
        app:layout_constraintLeft_toRightOf="@id/divider_line"
        />

    <View
        android:id="@+id/divider_line4"
        android:layout_width="175dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:background="#E0D9D9"
        app:layout_constraintTop_toBottomOf="@+id/btn_continue"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@id/tv_or"
        />

    <ImageView
        android:id="@+id/im_gmail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/gmail"
        app:layout_constraintTop_toBottomOf="@id/tv_or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#4E4E4E"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/im_gmail"
        app:layout_constraintStart_toStartOf="parent"
        android:text="By continuing, you agree to our \n
Terms of Service Privacy Policy Content Policy"/>

</androidx.constraintlayout.widget.ConstraintLayout>