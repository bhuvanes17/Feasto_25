<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="395dp"
    app:cardCornerRadius="15dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:elevation="15dp"
    android:outlineAmbientShadowColor="@color/blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="395dp"
            android:orientation="vertical"
            android:padding="3dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_rest"
                android:layout_width="396dp"
                android:layout_height="275dp"
                app:riv_corner_radius="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food_deli2"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Sri Gowri Nivas Hotel"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#060916"
                android:textSize="17sp"/>

                <ImageView
                    android:id="@+id/im_collec_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/tv_res_name"
                    android:src="@drawable/bookmark_red"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rating_res"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="-5dp"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:progressBackgroundTint="#6C6969"
                    android:progressTint="#F9A825"
                    android:scaleX="0.3"
                    android:scaleY="0.3"
                    android:transformPivotX="230dp"
                    android:transformPivotY="13dp"
                    android:layout_marginStart="-163dp"
                    />
                <TextView
                    android:id="@+id/rating_res_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="5.0"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"
                    />


            </LinearLayout>
            <View
                android:id="@+id/divider_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D7D5D5"
                app:layout_constraintTop_toBottomOf="@+id/tv"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_offerlogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/offers_icon"
                />
            <TextView
                android:id="@+id/tv_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:padding="3dp"
                android:text="20% OFF up to RS.50"
                android:textColor="#3C3838"
                android:textSize="12sp"
                />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

