<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Information_Restaurant.Restaurant_Details">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_full_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="true"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarExpanded"
            app:collapsedTitleTextAppearance="@style/CollapsingToolbarCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgbackarrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow_back"
                android:layout_marginStart="5dp"
                android:layout_marginTop="65dp"
                android:clickable="true"
                />
                <ImageView
                    android:id="@+id/imgmembers"
                    android:layout_width="38dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/group_members"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="60dp"
                    />
            <ImageView
                android:id="@+id/imageHeader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/optionmore"
                android:layout_marginTop="60dp"
                android:layout_marginStart="5dp"
                app:layout_collapseMode="parallax"/>


            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:id="@+id/llhedertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/appBarLayout"
        android:layout_marginBottom="-50dp">

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="welcome"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/blue_font"
                android:fontFamily="@font/poppins_medium"
                />

        <ImageView
            android:id="@+id/image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/info"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>




    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="102dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="@+id/llhedertext"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <RatingBar
                    android:id="@+id/rating_restaurant2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:progressBackgroundTint="#6C6969"
                    android:progressTint="#F9A825"
                    android:scaleX="0.3"
                    android:scaleY="0.3"
                    android:transformPivotX="230dp"
                    android:transformPivotY="13dp"
                    android:layout_marginStart="-146dp"
                    />
                <TextView
                    android:id="@+id/tv_ratingvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="5.0"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/imglocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/location_3"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 km ."
                android:textSize="12sp"
                android:textColor="#222528"
                android:layout_toRightOf="@id/imglocation"
                android:layout_marginTop="4dp"
                android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pudukkottai Locality"
                    android:textColor="#222528"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_distance"
                    />
                <ImageView
                    android:id="@+id/imgstopwatch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/stopwatch"
                    android:layout_below="@id/imglocation"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/tv_distance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-15 mins."
                    android:textSize="12sp"
                    android:textColor="#222528"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/imgstopwatch"
                    android:layout_below="@id/tv_distance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="For Food preparation"
                    android:textColor="#222528"
                    android:textSize="12sp"
                    android:layout_marginTop="9dp"
                    android:layout_below="@id/tv_distance"
                    android:layout_toRightOf="@+id/tv_distance2"
                    />

                <HorizontalScrollView
                    android:id="@+id/rl_hscrollview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgstopwatch"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="10dp">


                <TextView
                    android:id="@+id/tv_packcharges"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="No Packing Charges"
                    android:gravity="center"
                    android:drawableStart="@drawable/tick"
                    android:paddingStart="10dp"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="12dp"
                    />
                <TextView
                    android:id="@+id/tv_preparation"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:text="On-time preparation and delivery"
                    android:gravity="center"
                    android:layout_toRightOf="@id/tv_packcharges"
                    android:drawableStart="@drawable/tick"
                    android:paddingStart="10dp"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="20dp"
                    />

                    <TextView
                        android:id="@+id/tv_delivery"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tv_packcharges"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/text_background"
                        android:drawableStart="@drawable/tick"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:text="Loved by delivery partners"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_reorderfood"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="Frequently reoredered"
                        android:gravity="center"
                        android:layout_below="@id/tv_packcharges"
                        android:layout_toRightOf="@id/tv_delivery"
                        android:drawableStart="@drawable/tick"
                        android:paddingStart="10dp"
                        android:background="@drawable/text_background"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="11sp"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="22dp"
                        />
                </RelativeLayout>
                </HorizontalScrollView>
                <View
                    android:id="@+id/divider_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E5E5"
                    android:layout_below="@id/rl_hscrollview"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />
                <LinearLayout
                    android:id="@+id/ll_layoutoffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/divider_line"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_offerlogo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/offers_icon"
                        />
                    <TextView
                        android:id="@+id/tv_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="start"
                        android:padding="3dp"
                        android:text="20% OFF up to RS.50"
                        android:textColor="#3C3838"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_food_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    >

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/rl_itempopup"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="-62dp"
        android:background="#E72416"
        app:layout_constraintTop_toBottomOf="parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_itemadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item added"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_number"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/right_roundarrow2"
            android:layout_toRightOf="@id/tv_itemadd"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="visible"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>