<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.OTPverification">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/otp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We’ve sent an OTP to your mobile number +91 XXXXXXX"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="#787676"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- OTP Boxes (Custom styled EditText) -->
    <LinearLayout
        android:id="@+id/otp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="6">

        <!-- 6 Digit Boxes -->
        <EditText
            android:id="@+id/et_otp1"
            style="@style/OtpBoxStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_otp2"
            style="@style/OtpBoxStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_otp3"
            style="@style/OtpBoxStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_otp4"
            style="@style/OtpBoxStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_otp5"
            style="@style/OtpBoxStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_otp6"
            style="@style/OtpBoxStyle"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Resend Text -->
    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn’t receive the code? Resend"
        android:textColor="@color/blue_font"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/otp_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Verify Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Verify Continue"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@id/tv_resend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>