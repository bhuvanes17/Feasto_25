<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_logout.EditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        >
    <RelativeLayout
        android:id="@+id/ll_headeronedit"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/edit_header">

        <TextView
            android:id="@+id/tv_profile_nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_manag_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Account"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="44dp"
            android:layout_marginTop="48dp"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_manag_acc"
            android:layout_marginTop="44dp"
            android:layout_marginRight="-32dp"
            android:src="@drawable/manage_accounts"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_profile_nam"
            android:layout_centerInParent="true"
            android:layout_marginTop="42dp"
            android:src="@drawable/account_circle"/>


    </RelativeLayout>
        <TextView
            android:id="@+id/tv_firstname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="First Name"
            android:textColor="#3681E6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:textSize="13sp"
            android:gravity="bottom"
            android:layout_below="@+id/ll_headeronedit"
            android:fontFamily="@font/poppins_medium"/>
    <EditText
        android:id="@+id/et_firstname"
        android:layout_width="390dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="14sp"
        android:hint="Enter your first name"
        android:fontFamily="@font/poppins_medium"
        android:textColorHint="@color/blue_font"
        android:layout_below="@+id/tv_firstname"
        />
        <TextView
            android:id="@+id/tv_lastname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Last Name"
            android:textColor="#3681E6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@+id/et_firstname"
            android:gravity="bottom"
            />
        <EditText
            android:id="@+id/et_lastname"
            android:layout_width="390dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:hint="Enter your last name"
            android:fontFamily="@font/poppins_medium"
            android:textColorHint="@color/blue_font"
            android:layout_below="@+id/tv_lastname"
            />
        <TextView
            android:id="@+id/tv_mobilenum"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Mobile Number"
            android:textColor="#3681E6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@+id/et_lastname"
            android:gravity="bottom"
            />
        <EditText
            android:id="@+id/et_mobilenum"
            android:layout_width="390dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:hint="+91   77*637*82*"
            android:fontFamily="@font/poppins_medium"
            android:textColorHint="@color/blue_font"
            android:layout_below="@+id/tv_mobilenum"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Email"
            android:textColor="#3681E6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_below="@+id/et_mobilenum"
            android:gravity="bottom"
            />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="390dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:hint="Enter Email"
            android:fontFamily="@font/poppins_medium"
            android:textColorHint="@color/blue_font"
            android:layout_below="@+id/tv_email"
            android:inputType="textEmailAddress"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@+id/et_email"
            android:text="Update"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="70dp"
            android:elevation="5dp"
            android:background="@drawable/update_btn"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>